datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    // output   = "./prisma-client"
}

model Message {
    id             Int          @id @default(autoincrement())
    content        String
    role           String
    sender         String
    avatarSource   String
    conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
    conversationId Int
    starred        Boolean      @default(false)
}

model Conversation {
    id       Int       @id @default(autoincrement())
    name     String?
    messages Message[]
}

model Feature {
    id          Int     @id @default(autoincrement())
    name        String
    description String
    starred     Boolean @default(false)
}

model Task {
    id       Int     @id @default(autoincrement())
    name     String
    complete Boolean @default(false)
}
